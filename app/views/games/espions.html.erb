  <div class="grid">
    <% @game.wordlist.each do |word|%>
      <% if word.color == "bleu"%>
        <div class="module-bleu">
          <div class="word">
            <%= word.value.upcase %>
          </div>
        </div>
      <% elsif word.color == "rouge"%>
        <div class="module-rouge">
          <div class="word">
            <%= word.value.upcase %>
          </div>
        </div>
      <% elsif word.color == "jaune"%>
        <div class="module">
          <div class="word">
            <%= word.value.upcase %>
          </div>
        </div>
      <% else %>
        <div class="module-black">
          <div class="word">
            <%= word.value.upcase %>
          </div>
        </div>
      <% end %>
    <% end %>
